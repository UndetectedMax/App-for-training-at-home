<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/avatar_drawer_header"
        android:layout_width="82dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@drawable/baseline_verified_user_24" />

    <TextView
        android:id="@+id/name_drawer_header"
        android:layout_width="253dp"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/avatar_drawer_header"
        app:layout_constraintTop_toBottomOf="@+id/avatar_drawer_header"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/email_drawer_header"
        android:layout_width="253dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/avatar_drawer_header"
        app:layout_constraintTop_toBottomOf="@+id/name_drawer_header" />

</androidx.constraintlayout.widget.ConstraintLayout>